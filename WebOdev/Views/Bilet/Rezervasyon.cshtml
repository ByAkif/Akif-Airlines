@model YourProject.Models.Bilet

<h2>Bilet Rezervasyon Formu</h2>

<form asp-action="RezervasyonFormu" method="post">
    <div>
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad"></span>
    </div>

    <div>
        <label asp-for="Soyad"></label>
        <input asp-for="Soyad" class="form-control" />
        <span asp-validation-for="Soyad"></span>
    </div>

    <!-- Diğer bilet bilgileri için gerekli alanları ekleyin -->

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Rezervasyon Yap</button>
    </div>
</form>
